// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Auth Models

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?   // Hashed password
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // Relations
  gastos            Gasto[]
  ingresos          Ingreso[]
  prestamos         Prestamo[]
  gastosCompartidos GastoCompartido[]
  ahorros           Ahorro[]
  categorias        Categoria[]
  plazos            Plazo[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application Models

model Configuracion {
  id                 Int      @id @default(autoincrement())
  porcentajeAhorro   Float    @default(0.0)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Categoria {
  id          Int      @id @default(autoincrement())
  nombre      String   @unique
  color       String   @default("#6366f1")
  icono       String?
  createdAt   DateTime @default(now())
  gastos      Gasto[]
  
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
}

model Ingreso {
  id          Int      @id @default(autoincrement())
  monto       Float
  descripcion String
  fecha       DateTime @default(now())
  
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
}

model Gasto {
  id             Int       @id @default(autoincrement())
  monto          Float
  descripcion    String
  categoriaId    Int
  categoria      Categoria @relation(fields: [categoriaId], references: [id], onDelete: Cascade)
  fecha          DateTime  @default(now())
  esCompartido   Boolean   @default(false)
  gastoCompartidoId Int?
  gastoCompartido   GastoCompartido? @relation(fields: [gastoCompartidoId], references: [id], onDelete: SetNull)
  
  userId         String?
  user           User?     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt      DateTime  @default(now())
}

model Prestamo {
  id              Int      @id @default(autoincrement())
  persona         String
  monto           Float
  fechaPrestamo   DateTime @default(now())
  fechaRecordatorio DateTime
  pagado          Boolean  @default(false)
  
  userId          String?
  user            User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Plazo {
  id                 Int      @id @default(autoincrement())
  descripcion        String
  montoTotal         Float
  totalCuotas        Int
  cuotasPagadas      Int      @default(0)
  montoCuota         Float
  fechaInicio        DateTime @default(now())
  estado             String   @default("ACTIVO") // Added default based on previous code, though schema didn't show it explicitly in diff, it's safer.
  
  userId             String?
  user               User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model GastoCompartido {
  id          Int      @id @default(autoincrement())
  descripcion String
  montoTotal  Float
  fecha       DateTime @default(now())
  miembros    MiembroGastoCompartido[]
  gastos      Gasto[]
  
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
}

model MiembroGastoCompartido {
  id                 Int              @id @default(autoincrement())
  nombre             String
  ingresoMensual     Float
  esUsuario          Boolean          @default(false)
  gastoCompartidoId  Int
  gastoCompartido    GastoCompartido  @relation(fields: [gastoCompartidoId], references: [id], onDelete: Cascade)
  createdAt          DateTime         @default(now())
}

model Miembro {
  id             Int      @id @default(autoincrement())
  nombre         String
  ingresoMensual Float
  esUsuario      Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Ahorro {
  id          Int      @id @default(autoincrement())
  monto       Float
  descripcion String
  fecha       DateTime @default(now())
  
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
}
